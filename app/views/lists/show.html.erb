<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
<h1><%= @list.name %></h1>
</div>

<div class="container">
  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-category">
        <div class="card-trip">
          <img src="<%= @movies.find(bookmark.movie_id).poster_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= @movies.find(bookmark.movie_id).title %></h2>
              <p><%= @movies.find(bookmark.movie_id).overview %></p>
              <div class="card-footer d-flex">
                <p><%= bookmark.comment %></p>
                <button><%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
              </div>
            </div>
            <h2 class="card-trip-pricing"><%= @movies.find(bookmark.movie_id).rating %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
